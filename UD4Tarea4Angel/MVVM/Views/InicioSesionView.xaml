<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UD4Tarea4Angel.MVVM.Views.InicioSesionView"
             Title="InicioSesionView">
    <VerticalStackLayout Padding="30">
        <Label Text="Welcome to .NET MAUI!"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />

        <Entry x:Name="usernameEntry" 
               Placeholder="Usuario"               
               Text="{Binding UserItem.UserName}" />
        
        <Entry x:Name="passwordEntry" 
               Placeholder="ContraseÃ±a" 
               IsPassword="True" 
               Text="{Binding UserItem.Password}" />

        <Button Text="Iniciar Sesion" Clicked="OnLoginClicked" />
        <Button Text="Registrarse" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>