<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UD4Tarea4Angel.MVVM.Views.VerDiaView"
             Title="VerDiaView">
    <VerticalStackLayout>
        <Label 
            x:Name="cabeceraDia"
            Text="Dia con fecha: "
            FontSize="Medium"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <ListView x:Name="actividadesListView" ItemsSource="{Binding Actividades}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout>
                            <Label Text="{Binding ActividadDesarrollada}" />
                            <Label Text="{Binding TiempoEmpleado, StringFormat='Tiempo: {0} horas'}" />
                            <Label Text="{Binding Observaciones, StringFormat='Observaciones: {0}'}" />
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>


</ContentPage>